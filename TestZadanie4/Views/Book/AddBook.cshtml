@model List<Book>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Додати нову книгу</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <div>

                    @*<form  method="post" asp-action="AddBook" asp-controller="Book">*@
                    <form method="post" id="myForm">
                        <div class="input-group mb-3">

                            <label class="input-group-text">Назва Книги</label>
                            <input class="form-control" type="text" id="Name" name="Name" />

                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Жанр Книги:</label>
                            <select id="Genre" name="Genre" class="form-select">
                                <option selected></option>
                                <option value="Класика">Класика</option>
                                <option value="Детектив">Детектив</option>
                                <option value="Роман">Роман</option>
                                <option value="Поезія">Поезія</option>
                                <option value="Триллер">Триллер</option>
                                <option value="Фантастика">Фантастика</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Кількість сторінок</label>
                            <input class="form-control" type="number" id="NumberPages" name="NumberPages" />

                        </div>

                        <div class="input-group mb-3">
                            @*<button class="btn btn-outline-success" asp-controller="Book" asp-action="AddBook">Зберегти</button>*@
                            <button class="btn btn-outline-success" type="submit">Зберегти</button>

                        </div>

                    </form>

                    

                </div>
            </div>

        </div>
    </div>
</div>


<div>


    <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLabel">Список книг в наявності</h1>

    </div>
    <div class="input-group mb-3">
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Назад на головну</a>
        <a type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Додати нову книгу</a>
        <a class="btn btn-outline-success" asp-controller="Author" asp-action="AddAuthor">Додати автора</a>
    </div>

</div>

<div style="text-align: center">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Назва Книги</th>
                <th scope="col">Жанр Книги</th>
                <th scope="col">Кільсть сторінок</th>
                <th scope="col">Автор Книги</th>
            </tr>
        </thead>
        @if (Model != null)
        {
            @foreach (var book in Model)
            {
                <tbody>
                    <tr>

                        <td>@book.Name</td>
                        <td>@book.Genre</td>
                        <td>@book.NumberPages</td>
                        <td>@book.Author?.Name </td>
                        <td class="btn btn-success">
                            <a class="btn btn-outline-success" role="button" asp-controller="Book" asp-action="DeleteBook" asp-route-identificator="@book.Id">Видалити</a>
                        </td>
                        <td class="btn btn-success">
                            <a class="btn btn-outline-success" role="button" asp-controller="Book" asp-action="EditBook" asp-route-identificator="@book.Id">Редагувати</a>
                        </td>
                    </tr>
                </tbody>


            }
        }
    </table>
</div>


