<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">Ім'я'</th>
            <th scope="col">Жанр</th>
            <th scope="col">Кільсть сторінок</th>
            <th scope="col">Автор</th>
        </tr>
    </thead>
    @if (Model != null)
    {
        @foreach (var book in Model)
        {
            <tbody>
                <tr>


                    <td>@book.Name</td>
                    <td>@book.Genre</td>
                    <td>@book.NumberPages</td>
                    <td>@book.Author?.Name </td>
                    <td class="btn btn-success">
                        <a class="btn btn-outline-success" role="button" asp-controller="Home" asp-action="DeleteBook" asp-route-identificator="@book.Id">Видалити</a>
                    </td>




                </tr>
            </tbody>
        }

       

    }
